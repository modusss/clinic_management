<% 
  # Determinar classes baseadas no tipo de mensagem
  bg_color = type == :notice ? 'bg-green-50' : 'bg-red-50'
  border_color = type == :notice ? 'border-green-400' : 'border-red-400'
  icon_color = type == :notice ? 'text-green-400' : 'text-red-400'
  text_color = type == :notice ? 'text-green-800' : 'text-red-800'
  desc_color = type == :notice ? 'text-green-700' : 'text-red-700'
%>

<div class="<%= bg_color %> border-l-4 <%= border_color %> p-4 mb-4 rounded shadow-md animate-fade-in">
  <div class="flex items-start">
    <svg class="w-5 h-5 <%= icon_color %> mr-3 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
      <% if type == :notice %>
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
      <% else %>
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
      <% end %>
    </svg>
    <div class="flex-1">
      <p class="text-sm font-medium <%= text_color %>">
        <%= message %>
      </p>
    </div>
    <button onclick="this.parentElement.parentElement.remove()" 
            class="ml-3 flex-shrink-0 <%= icon_color %> hover:opacity-75 transition-opacity">
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
      </svg>
    </button>
  </div>
</div>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fade-in {
    animation: fadeIn 0.3s ease-out;
  }
</style>

<script>
  // Auto-remover mensagem apÃ³s 5 segundos
  setTimeout(function() {
    const flashMessages = document.querySelectorAll('.animate-fade-in');
    flashMessages.forEach(msg => {
      msg.style.opacity = '0';
      msg.style.transition = 'opacity 0.5s ease-out';
      setTimeout(() => msg.remove(), 500);
    });
  }, 5000);
</script>

