
<% if referral? current_user %>
  <%= breadcrumb({title: "Painel de indicações", path: main_app.referral_path(user_referral)}, {title: "Novo convite de " + user_referral.name , path: nil}) %>
<% else %>
  <%= breadcrumb({title: "Todos os convites", path: invitations_path}, {title: "Novo convite", path: nil}) %>
<% end %>

<div class="container mx-auto px-4 mt-6">
  <h1 class="text-2xl font-bold mb-4">Novo Convite</h1>
  <%= render "form", invitation: @invitation,
            referrals: @referrals,
            regions: @regions,
            region: "",
            service: "",
            referral: "",
            date: "" %>

  <br>

<div class="w-full overflow-x-auto max-w-2/3 mx-auto">

<h2 class="w-full max-w-lg mx-auto mt-6 text-xl font-bold mb-4">Convites lançados hoje</h2>
    <table class="w-full max-w-lg mx-auto mt-6">
      <thead>
        <tr>
          <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Nome do Paciente</th>
          <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Telefone</th>
          <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Atendimento para</th>
          <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Excluir</th>
        </tr>
      </thead>
      <tbody id="invitations_list">
          <% if @today_invitations.present? %>
            <% @today_invitations.each do |invitation| %>
              <%= render "invitation", invitation: invitation  %>
            <% end %>
          <% end %>
      </tbody>
    </table>
</div>

</div>
