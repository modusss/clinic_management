<% unless referral?(current_user) %>
  <!-- Elegant Referral Filter for Managers/Owners -->
  <div class="referral-filter-container" style="margin: 15px">
    <div class="referral-filter-wrapper">
      <!-- Filter Header -->
      <div class="filter-header">
        <div class="filter-header-content">
          <i class="material-icons filter-header-icon">group</i>
          <h2 class="filter-title">Filtrar por Indicador</h2>
        </div>
        <div class="filter-header-stats">
          <% 
            active_referrals = @referrals.select(&:active?)
            inactive_referrals = @referrals.reject(&:active?)
          %>
          <span class="stat-badge active-stat">
            <i class="material-icons">check_circle</i>
            <%= active_referrals.count %> ativos
          </span>
          <% if inactive_referrals.any? %>
            <span class="stat-badge inactive-stat">
              <i class="material-icons">cancel</i>
              <%= inactive_referrals.count %> inativos
            </span>
          <% end %>
        </div>
      </div>

      <!-- Active Referrals Pills (Highlighted) -->
      <div class="filter-section active-section">
        <div class="filter-pills-container">
          <%= link_to invitations_path(month: params[:month], year: params[:year]), 
                      class: "filter-pill filter-pill-all #{params[:referral_id].blank? ? 'active' : ''}" do %>
            <i class="material-icons">view_list</i>
            <span>Todos</span>
          <% end %>

          <% active_referrals.sort_by(&:name).each do |referral| %>
            <%= link_to invitations_path(referral_id: referral.id, month: params[:month], year: params[:year]), 
                        class: "filter-pill filter-pill-active #{params[:referral_id].to_i == referral.id ? 'active' : ''}" do %>
              <i class="material-icons">check_circle</i>
              <span><%= referral.name %></span>
            <% end %>
          <% end %>
        </div>
      </div>

      <!-- Inactive Referrals Pills (Subtle/Collapsible) -->
      <% if inactive_referrals.any? %>
        <div class="filter-section inactive-section">
          <div class="inactive-toggle" onclick="toggleInactiveFilters()">
            <div class="inactive-toggle-content">
              <i class="material-icons" id="inactive-toggle-icon">expand_more</i>
              <span class="inactive-toggle-text">
                <%= inactive_referrals.count %> 
                <%= inactive_referrals.count == 1 ? 'indicador inativo' : 'indicadores inativos' %>
              </span>
            </div>
            <span class="toggle-hint">Clique para expandir</span>
          </div>
          
          <div class="filter-pills-container inactive-pills" id="inactive-filters-content" style="display: none;">
            <% inactive_referrals.sort_by(&:name).each do |referral| %>
              <%= link_to invitations_path(referral_id: referral.id, month: params[:month], year: params[:year]), 
                          class: "filter-pill filter-pill-inactive #{params[:referral_id].to_i == referral.id ? 'active' : ''}" do %>
                <i class="material-icons">cancel</i>
                <span><%= referral.name %></span>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <script>
    function toggleInactiveFilters() {
      const content = document.getElementById('inactive-filters-content');
      const icon = document.getElementById('inactive-toggle-icon');
      
      if (content.style.display === 'none') {
        content.style.display = 'flex';
        icon.textContent = 'expand_less';
      } else {
        content.style.display = 'none';
        icon.textContent = 'expand_more';
      }
    }
  </script>
<% end %>

