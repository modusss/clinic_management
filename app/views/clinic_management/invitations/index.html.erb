<% if notice %>
  <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
    <strong class="font-bold">Notice:</strong>
    <span class="block sm:inline"><%= notice %></span>
  </div>
<% end %>

<% unless referral?(current_user) %>
  <!-- Elegant Referral Filter for Managers/Owners -->
  <div class="referral-filter-container" style="margin: 15px">
    <div class="referral-filter-wrapper">
      <!-- Filter Header -->
      <div class="filter-header">
        <div class="filter-header-content">
          <i class="material-icons filter-header-icon">group</i>
          <h2 class="filter-title">Filtrar por Indicador</h2>
        </div>
        <% if params[:referral_id].present? %>
          <div class="active-filter-badge">
            <i class="material-icons">check_circle</i>
            <span>Filtro ativo</span>
          </div>
        <% end %>
      </div>

      <!-- Filter Pills -->
      <div class="filter-pills-container">
        <%= link_to invitations_path(month: params[:month], year: params[:year]), 
                    class: "filter-pill #{params[:referral_id].blank? ? 'active' : ''}" do %>
          <i class="material-icons">view_list</i>
          <span>Todos</span>
        <% end %>

        <% @referrals.sort_by(&:name).each do |referral| %>
          <%= link_to invitations_path(referral_id: referral.id, month: params[:month], year: params[:year]), 
                      class: "filter-pill #{params[:referral_id].to_i == referral.id ? 'active' : ''}" do %>
            <i class="material-icons">person</i>
            <span><%= referral.name %></span>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<div style="margin: 15px">
<% if is_manager_above? %>
  <%= link_to "Relatório de Desempenho", clinic_management.performance_report_path, class: "text-blue-500 hover:text-blue-700"  %>
<% end %>
</div>

<div class="flex justify-between items-end mb-6" style="margin: 15px">
  <h1 class="text-3xl font-bold">Últimos convites lançados e remarcações realizadas</h1>
  <%= link_to "Novo convite", new_invitation_path, class: "inline-block bg-blue-600 hover:bg-blue-800 text-white font-bold py-2 px-4 rounded" %>
</div>

<!-- Month/Year Filter -->
<div style="margin: 15px">
  <%= render partial: "month_year_filter", 
             locals: { 
               selected_month: @selected_month, 
               selected_year: @selected_year,
               available_dates: @available_dates,
               current_path: invitations_path
             } %>
</div>

<!-- Invitations and Reschedules Table -->
<div style="margin: 15px">
  <%= render partial: "invitations_reschedules_table", locals: { invitations_data: @invitations_data } %>
</div>

