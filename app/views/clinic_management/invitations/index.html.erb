    font-size: 1rem;
  }
}

/* Animation for pills */
@keyframes fadeInScale {
  from {
    opacity: 0;
    transform: scale(0.95);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.filter-pill {
  animation: fadeInScale 0.3s ease-out backwards;
}

.filter-pill:nth-child(1) { animation-delay: 0.05s; }
.filter-pill:nth-child(2) { animation-delay: 0.1s; }
.filter-pill:nth-child(3) { animation-delay: 0.15s; }
.filter-pill:nth-child(4) { animation-delay: 0.2s; }
.filter-pill:nth-child(5) { animation-delay: 0.25s; }
.filter-pill:nth-child(6) { animation-delay: 0.3s; }
.filter-pill:nth-child(7) { animation-delay: 0.35s; }
.filter-pill:nth-child(8) { animation-delay: 0.4s; }

.pagination {
  display: flex;
  justify-content: center;
  padding: 1em 0;
}

.pagination li {
  list-style: none;
}

.pagination li a {
  margin: 0 0.5em;
  padding: 0.5em 1em;
  border: 1px solid #e2e8f0; /* border-gray-300 */
  color: #4a5568; /* text-gray-700 */
}

.pagination li.active a,
.pagination li a:hover {
