  .referral-filter-wrapper {
    padding: 1rem;
  }

  .filter-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 0.75rem;
  }

  .filter-header-icon {
    font-size: 1.5rem;
  }

  .filter-title {
    font-size: 0.9375rem;
  }

  .active-filter-badge {
    padding: 0.375rem 0.875rem;
    font-size: 0.75rem;
  }

  .filter-pills-container {
    gap: 0.5rem;
  }

  .filter-pill {
    padding: 0.5rem 0.875rem;
    font-size: 0.8125rem;
  }

