<!-- Period Totals Summary -->
<% if @total_invitations > 0 || @total_reschedules > 0 %>
  <div style="margin: 15px 15px 25px 15px">
    <div class="period-totals-container">
      <div class="period-totals-header">
        <i class="material-icons">summarize</i>
        <h3>Totais do Período</h3>
      </div>
      <div class="period-totals-content">
        <div class="period-total-item period-total-invitations">
          <i class="material-icons">event_available</i>
          <div class="period-total-info">
            <span class="period-total-label">Total de Convites</span>
            <span class="period-total-value"><%= @total_invitations %></span>
          </div>
        </div>
        
        <div class="period-total-separator"></div>
        
        <div class="period-total-item period-total-reschedules">
          <i class="material-icons">update</i>
          <div class="period-total-info">
            <span class="period-total-label">Total de Remarcações</span>
            <span class="period-total-value"><%= @total_reschedules %></span>
          </div>
        </div>
        
        <% if (@total_whatsapp || 0) > 0 || (@total_phone || 0) > 0 %>
          <div class="period-total-separator"></div>
          
          <div class="period-total-item period-total-interactions">
            <div class="interactions-totals-group">
              <div class="interaction-total-item whatsapp">
                <i class="material-icons">chat</i>
                <div class="period-total-info">
                  <span class="period-total-label">WhatsApp</span>
                  <span class="period-total-value"><%= @total_whatsapp || 0 %></span>
                </div>
              </div>
              <div class="interaction-total-item phone">
                <i class="material-icons">phone</i>
                <div class="period-total-info">
                  <span class="period-total-label">Ligações</span>
                  <span class="period-total-value"><%= @total_phone || 0 %></span>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      
      <!-- Referral Performance Summary -->
      <% if @referral_period_totals.present? && @referral_period_totals.any? %>
        <div class="referral-performance-summary">
          <div class="referral-performance-header">
            <i class="material-icons">leaderboard</i>
            <span>Desempenho por Marcador</span>
            <% unless @is_referral_user %>
              <% total_sales_amount = @referral_period_totals.sum { |d| d[:sales_amount] } %>
              <% if total_sales_amount > 0 %>
                <span class="total-sales-badge">
                  <i class="material-icons">payments</i>
                  Total: <%= number_to_currency(total_sales_amount) %>
                </span>
              <% end %>
            <% end %>
          </div>
          <div class="referral-performance-grid">
            <% @referral_period_totals.each_with_index do |data, index| %>
              <div class="referral-performance-card <%= 'top-performer' if index == 0 && !@is_referral_user %>">
                <% unless @is_referral_user %>
                  <div class="referral-performance-rank">
                    <% if index == 0 %>
                      <i class="material-icons" style="color: #f59e0b;">emoji_events</i>
                    <% else %>
                      <span class="rank-number"><%= index + 1 %>º</span>
                    <% end %>
                  </div>
                <% end %>
                <div class="referral-performance-info">
                  <span class="referral-performance-name"><%= data[:referral].name %></span>
                  <div class="referral-performance-stats">
                    <span class="stat-invitations" title="Convites">
                      <i class="material-icons">event_available</i>
                      <%= data[:invitations] %>
                    </span>
                    <span class="stat-reschedules" title="Remarcações">
                      <i class="material-icons">update</i>
                      <%= data[:reschedules] %>
                    </span>
                    <span class="stat-total" title="Total">
                      <i class="material-icons">functions</i>
                      <%= data[:invitations] + data[:reschedules] %>
                    </span>
                  </div>
                  <% if (data[:whatsapp_count] || 0) > 0 || (data[:phone_count] || 0) > 0 %>
                    <div class="referral-performance-interactions">
                      <% if (data[:whatsapp_count] || 0) > 0 %>
                        <span class="stat-whatsapp" title="WhatsApp">
                          <i class="material-icons">chat</i>
                          <%= data[:whatsapp_count] %>
                        </span>
                      <% end %>
                      <% if (data[:phone_count] || 0) > 0 %>
                        <span class="stat-phone" title="Ligações">
                          <i class="material-icons">phone</i>
                          <%= data[:phone_count] %>
                        </span>
                      <% end %>
                    </div>
                  <% end %>
                  <% if data[:sales_amount] > 0 && !@is_referral_user %>
                    <div class="referral-sales-amount">
                      <i class="material-icons">payments</i>
                      <span><%= number_to_currency(data[:sales_amount]) %></span>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<% if @view_mode == 'annual' %>
  <!-- Annual Monthly Summary Cards -->
  <div style="margin: 15px">
    <div class="annual-monthly-grid">
      <% @annual_monthly_data.reverse.each do |month_data| %>
        <div class="monthly-summary-card">
          <div class="monthly-card-header">
            <i class="material-icons">calendar_month</i>
            <span class="month-name"><%= month_data[:month_name] %></span>
          </div>
          <div class="monthly-card-stats">
            <div class="monthly-stat">
              <span class="stat-label">Convites</span>
              <span class="stat-value invitations"><%= month_data[:invitations] %></span>
            </div>
            <div class="monthly-stat">
              <span class="stat-label">Remarcações</span>
              <span class="stat-value reschedules"><%= month_data[:reschedules] %></span>
            </div>
            <div class="monthly-stat">
              <span class="stat-label">Total</span>
              <span class="stat-value total"><%= month_data[:total] %></span>
            </div>
          </div>
          
          <% if (month_data[:whatsapp_count] || 0) > 0 || (month_data[:phone_count] || 0) > 0 %>
            <div class="monthly-card-interactions">
              <div class="monthly-interaction whatsapp" title="WhatsApp">
                <i class="material-icons">chat</i>
                <span><%= month_data[:whatsapp_count] || 0 %></span>
              </div>
              <div class="monthly-interaction phone" title="Ligações">
                <i class="material-icons">phone</i>
                <span><%= month_data[:phone_count] || 0 %></span>
              </div>
            </div>
          <% end %>
          <% if month_data[:sales_amount] > 0 || (month_data[:total_store_sales] || 0) > 0 %>
            <div class="monthly-card-sales-comparison">
              <% if month_data[:sales_amount] > 0 %>
                <div class="monthly-card-sales clinic-sales" title="Vendas da Clínica">
                  <i class="material-icons">medical_services</i>
                  <span><%= number_to_currency(month_data[:sales_amount]) %></span>
                </div>
              <% end %>
              <% if (month_data[:total_store_sales] || 0) > 0 %>
                <div class="monthly-card-sales total-sales" title="Total Geral da Loja">
                  <i class="material-icons">store</i>
                  <span><%= number_to_currency(month_data[:total_store_sales]) %></span>
                </div>
              <% end %>
              <% if month_data[:sales_amount] > 0 && (month_data[:total_store_sales] || 0) > 0 %>
                <% 
                  participation = (month_data[:sales_amount].to_f / month_data[:total_store_sales].to_f * 100).round(1)
                %>
                <div class="clinic-participation" title="Participação da Clínica no Faturamento">
                  <span class="participation-value"><%= participation %>%</span>
                  <span class="participation-label">participação</span>
                </div>
              <% end %>
            </div>
          <% end %>
          
          <!-- Referral Performance for this Month (Always Visible) -->
          <% if month_data[:referral_totals].present? && month_data[:referral_totals].any? %>
            <% 
              # Separate "Local" from regular referrals
              regular_referrals = month_data[:referral_totals].reject { |r| r[:referral].name.downcase == 'local' }
              local_referral = month_data[:referral_totals].find { |r| r[:referral].name.downcase == 'local' }
            %>
            <div class="monthly-referral-summary">
              <!-- Regular Referrals (Competition) -->
              <% if regular_referrals.any? %>
                <div class="monthly-referral-list-visible">
                  <% regular_referrals.each_with_index do |ref_data, idx| %>
                    <div class="monthly-referral-item <%= 'top-performer' if idx == 0 %>">
                      <div class="referral-rank">
                        <% if idx == 0 %>
                          <i class="material-icons" style="color: #f59e0b; font-size: 1rem;">emoji_events</i>
                        <% else %>
                          <span><%= idx + 1 %>º</span>
                        <% end %>
                      </div>
                      <div class="referral-info">
                        <span class="referral-name"><%= ref_data[:referral].name %></span>
                        <div class="referral-mini-stats">
                          <span class="mini-stat invitations" title="Convites">
                            <i class="material-icons">event_available</i>
                            <%= ref_data[:invitations] %>
                          </span>
                          <span class="mini-stat reschedules" title="Remarcações">
                            <i class="material-icons">update</i>
                            <%= ref_data[:reschedules] %>
                          </span>
                          <span class="mini-stat total" title="Total">
                            <i class="material-icons">functions</i>
                            <%= ref_data[:invitations] + ref_data[:reschedules] %>
                          </span>
                        </div>
                        <% if (ref_data[:whatsapp_count] || 0) > 0 || (ref_data[:phone_count] || 0) > 0 %>
                          <div class="referral-interactions-stats">
                            <% if (ref_data[:whatsapp_count] || 0) > 0 %>
                              <span class="mini-stat whatsapp" title="WhatsApp">
                                <i class="material-icons">chat</i>
                                <%= ref_data[:whatsapp_count] %>
                              </span>
                            <% end %>
                            <% if (ref_data[:phone_count] || 0) > 0 %>
                              <span class="mini-stat phone" title="Ligações">
                                <i class="material-icons">phone</i>
                                <%= ref_data[:phone_count] %>
                              </span>
                            <% end %>
                          </div>
                        <% end %>
                      </div>
                      <% if ref_data[:sales_amount] > 0 %>
                        <div class="referral-sales">
                          <%= number_to_currency(ref_data[:sales_amount]) %>
                        </div>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              <% end %>
              
              <!-- Local (Separate - Not in Competition) -->
              <% if local_referral %>
                <div class="local-referral-section">
                  <div class="local-referral-item">
                    <div class="local-icon">
                      <i class="material-icons">store</i>
                    </div>
                    <div class="referral-info">
                      <span class="referral-name">Local</span>
                      <div class="referral-mini-stats">
                        <span class="mini-stat reschedules" title="Remarcações">
                          <i class="material-icons">update</i>
                          <%= local_referral[:reschedules] %>
                        </span>
                      </div>
                    </div>
                    <% if local_referral[:sales_amount] > 0 %>
                      <div class="local-sales">
                        <%= number_to_currency(local_referral[:sales_amount]) %>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
          
          <%= link_to invitations_path(view_mode: 'monthly', month: month_data[:month], year: month_data[:year], referral_id: params[:referral_id]),
                      class: "monthly-card-action-link" do %>
            <div class="monthly-card-action">
              <span>Ver detalhes</span>
              <i class="material-icons">arrow_forward</i>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <!-- Invitations and Reschedules Table (Monthly View) -->
  <div style="margin: 15px">
    <%= render partial: "invitations_reschedules_table", locals: { invitations_data: @invitations_data } %>
  </div>
<% end %>

