  cursor: pointer;
  white-space: nowrap;
}

.filter-pill i {
  font-size: 1.125rem;
  transition: transform 0.2s ease;
}

.filter-pill:hover {
  background: #f8fafc;
  border-color: #6366f1;
  color: #6366f1;
