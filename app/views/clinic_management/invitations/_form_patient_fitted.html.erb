<%= form_for(invitation, url: create_patient_fitted_invitations_path, method: :post, html: {multipart: true, class: "w-full max-w-lg mx-auto mt-6", id: "new_invitation"}) do |form| %>
  <% if invitation.errors.any? %>
    <div class="bg-red-200 border-red-600 border-l-4 p-4 mb-6">
      <h2 class="text-red-800 font-bold"><%= pluralize(invitation.errors.count, "erro") %> impediram que o convite fosse salvo:</h2>
      <ul class="list-disc pl-6">
        <% invitation.errors.each do |error| %>
          <li class="text-red-600"><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div data-controller="phone-checker" 
       data-phone-checker-check-url-value="<%= check_existing_phone_invitations_path %>"
       data-phone-checker-csrf-token-value="<%= form_authenticity_token %>">

    <h2 class="text-lg font-bold mb-4">1. Dados do marca√ß√£o</h2>
    <div class="mb-4">
      <%= form.label :referral_id, "Indicador", class: "block text-gray-700 font-bold" %>
      <%= form.collection_select :referral_id, referrals, :id, :name, {selected: local_referral.id}, {class: "w-full px-3 py-2 border rounded shadow appearance-none text-gray-700 leading-tight focus:outline-none focus:shadow-outline"} %>
    </div>

    <%= form.fields_for :appointments do |appointment_fields| %>
      <div class="mb-4">
        <%= appointment_fields.hidden_field :service_id, value: service.id %>
      </div>
    <% end %>
    
    <br>
    <br>
    <h2 class="text-lg font-bold mb-4">2. Dados do convidado</h2>
    <%= form.fields_for :lead do |lead_fields| %>
      <div class="mb-4">
        <label for="lead_phone" class="block text-gray-700 font-bold mb-2">Telefone</label>
        <%= lead_fields.telephone_field :phone, 
            value: "(77) ", 
            maxlength: 15, 
            id: "lead_phone", 
            class: "w-full px-3 py-2 border rounded shadow appearance-none text-gray-700 leading-tight focus:outline-none focus:shadow-outline", 
            placeholder: "(77) 98888-8888",
            data: { 
              controller: "phone-mask",
              phone_mask_target: "input",
              phone_checker_target: "phoneInput",
              action: "blur->phone-checker#checkPhone focus->phone-checker#onPhoneFocus"
            }
        %>
        
        <div data-phone-checker-target="existingLeadAlert" class="hidden mt-3 p-4 border-l-4 border-yellow-400 bg-yellow-50">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-yellow-800">
                Telefone j√° cadastrado!
              </h3>
              <div class="mt-2 text-sm text-yellow-700" data-phone-checker-target="existingLeadInfo">
                <!-- Informa√ß√µes do lead ser√£o inseridas aqui -->
              </div>
              <div class="mt-4">
                <div class="flex space-x-2">
                  <button type="button" 
                          data-action="click->phone-checker#associate"
                          class="phone-action-button bg-green-500 hover:bg-green-600 text-white px-3 py-1 text-sm rounded transition-all">
                    ‚úì Usar cadastro existente
                  </button>
                  <button type="button" 
                          data-action="click->phone-checker#transfer"
                          class="phone-action-button bg-orange-500 hover:bg-orange-600 text-white px-3 py-1 text-sm rounded transition-all">
                    ‚Üî Transferir telefone
                  </button>
                  <button type="button" 
                          data-action="click->phone-checker#cancel"
                          class="phone-action-button bg-gray-500 hover:bg-gray-600 text-white px-3 py-1 text-sm rounded transition-all">
                    ‚úï Cancelar
                  </button>
                </div>
                
                <div class="mt-2 text-xs text-gray-600">
                  üí° <strong>Dica:</strong> Voc√™ pode trocar de op√ß√£o a qualquer momento antes de submeter.
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <%= hidden_field_tag :phone_action, '', data: { phone_checker_target: "phoneActionInput" } %>

    <div class="mb-4">
      <%= form.label "Nome do paciente", class: "block text-gray-700 font-bold" %>
      <%= form.text_field :patient_name, class: "w-full px-3 py-2 border rounded shadow appearance-none text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
    
    <%= form.fields_for :lead do |lead_fields| %>
      <div class="mb-4">
        <label for="lead_name" class="block text-gray-700 font-bold mb-2">Nome do respons√°vel</label>
        <%= lead_fields.text_field :name, 
            class: "w-full px-3 py-2 border rounded shadow appearance-none text-gray-700 leading-tight focus:outline-none focus:shadow-outline", 
            placeholder: "Deixe em branco se o paciente √© o respons√°vel",
            data: { phone_checker_target: "nameField" } %>
      </div>

      <div class="mb-4">
        <label for="lead_address" class="block text-gray-700 font-bold mb-2">Endere√ßo</label>
        <%= lead_fields.text_field :address, 
            class: "w-full px-3 py-2 border rounded shadow appearance-none text-gray-700 leading-tight focus:outline-none focus:shadow-outline",
            data: { phone_checker_target: "addressField" } %>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label "Observa√ß√µes", class: "block text-gray-700 font-bold" %>
      <%= form.text_area :notes, class: "w-full px-3 py-2 border rounded shadow appearance-none text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <!-- Campo opcional de rastreamento de origem (apenas para n√£o-referrals e n√£o-managers) -->
    <% unless referral?(current_user) || is_manager_above? %>
      <div class="mb-6 border-t pt-4">
        <!-- Bot√£o para revelar campos opcionais -->
        <button type="button" 
                onclick="toggleRecaptureFields()"
                id="toggle-recapture-btn"
                class="flex items-center text-sm text-blue-600 hover:text-blue-800 font-medium transition-colors">
          <svg id="recapture-chevron" class="w-4 h-4 mr-1 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
          <span id="recapture-toggle-text">Adicionar comprovante de esfor√ßo ativo (opcional)</span>
        </button>

        <!-- Campos de recaptura (ocultos por padr√£o) -->
        <div id="recapture-fields" class="hidden mt-4 p-4 bg-gray-50 rounded-lg border border-gray-200 space-y-4">
          
          <!-- Origem do Encaixe -->
          <div class="space-y-2">
            <label class="block text-sm font-bold text-gray-700">
              Como conseguiu este encaixe?
            </label>
            
            <div class="space-y-2">
              <label class="flex items-center space-x-2 cursor-pointer">
                <%= radio_button_tag 'invitation[recapture_origin]', 'organic', false,
                                     class: "form-radio text-blue-600",
                                     onclick: "toggleEncaixeActiveEffortFields(false)" %>
                <span class="text-gray-700">Org√¢nico (paciente procurou espontaneamente)</span>
              </label>
              
              <label class="flex items-center space-x-2 cursor-pointer">
                <%= radio_button_tag 'invitation[recapture_origin]', 'active_effort', false,
                                     class: "form-radio text-blue-600",
                                     onclick: "toggleEncaixeActiveEffortFields(true)" %>
                <span class="text-gray-700 font-medium">Meu esfor√ßo ativo (liguei/mensagem)</span>
              </label>
            </div>
          </div>

          <!-- Campos de Esfor√ßo Ativo (vis√≠veis apenas se 'active_effort' selecionado) -->
          <div id="encaixe-active-effort-fields" class="hidden space-y-4">
            
            <!-- A√ß√µes Realizadas -->
            <div class="space-y-2">
              <label class="block text-sm font-bold text-gray-700">
                A√ß√µes realizadas:
              </label>
              
              <div class="space-y-2">
                <label class="flex items-center space-x-2">
                  <%= check_box_tag 'invitation[recapture_actions][]', 'called_patient', false, 
                                    class: "form-checkbox text-blue-600 rounded" %>
                  <span class="text-gray-700 text-sm">Liguei para o paciente</span>
                </label>
                
                <label class="flex items-center space-x-2">
                  <%= check_box_tag 'invitation[recapture_actions][]', 'sent_personalized_message', false, 
                                    class: "form-checkbox text-blue-600 rounded" %>
                  <span class="text-gray-700 text-sm">Mandei mensagem personalizada</span>
                </label>
                
                <label class="flex items-center space-x-2">
                  <%= check_box_tag 'invitation[recapture_actions][]', 'sent_audio_or_voice_call', false, 
                                    class: "form-checkbox text-blue-600 rounded" %>
                  <span class="text-gray-700 text-sm">Mandei √°udio ou fiz chamada de voz</span>
                </label>
                
                <label class="flex items-center space-x-2">
                  <%= check_box_tag 'invitation[recapture_actions][]', 'other', false, 
                                    class: "form-checkbox text-blue-600 rounded",
                                    id: "encaixe-action-other-checkbox",
                                    onclick: "toggleEncaixeOtherActionField()" %>
                  <span class="text-gray-700 text-sm">Outros</span>
                </label>
                
                <!-- Campo de texto para "Outros" -->
                <div id="encaixe-other-action-field" class="hidden ml-6 mt-2">
                  <%= text_field_tag 'invitation[recapture_description]', nil,
                                     placeholder: "Descreva a a√ß√£o realizada",
                                     class: "w-full px-3 py-2 border rounded shadow text-sm" %>
                </div>
              </div>
            </div>

            <!-- Upload de Screenshots -->
            <div class="space-y-2">
              <label class="block text-sm font-bold text-gray-700">
                Print da conversa:
                <span class="text-xs font-normal text-gray-500">(recomendado para comiss√£o)</span>
              </label>
              
              <%= file_field_tag 'invitation[recapture_screenshots][]',
                                 multiple: true,
                                 accept: "image/*",
                                 class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100",
                                 onchange: "previewEncaixeScreenshots(this)" %>
              
              <!-- Preview dos screenshots -->
              <div id="encaixe-screenshots-preview" class="mt-2 grid grid-cols-3 gap-2"></div>
            </div>

            <!-- Observa√ß√£o adicional -->
            <div class="space-y-2">
              <label class="block text-sm font-bold text-gray-700">
                Observa√ß√£o adicional (opcional):
              </label>
              <%= text_area_tag 'invitation[recapture_description_extra]', nil,
                                rows: 2,
                                placeholder: "Detalhes sobre o esfor√ßo realizado...",
                                class: "w-full px-3 py-2 border rounded shadow text-sm" %>
            </div>
          </div>

          <p class="text-xs text-gray-500 italic">
            üí° Estes dados s√£o opcionais e ajudam a rastrear a origem dos encaixes.
          </p>
        </div>
      </div>
    <% end %>

    <div class="my-4">
      <%= form.submit "Adicionar novo paciente", 
          class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline",
          data: { phone_checker_target: "submitButton" } %>
      <br>
      <br>
      <div class="text-red-700" id="validation"></div>
    </div>

  </div>
<% end %>

<script>
  // Toggle campos de recaptura
  function toggleRecaptureFields() {
    const fields = document.getElementById('recapture-fields');
    const chevron = document.getElementById('recapture-chevron');
    const text = document.getElementById('recapture-toggle-text');
    
    if (fields.classList.contains('hidden')) {
      fields.classList.remove('hidden');
      chevron.classList.add('rotate-90');
      text.textContent = 'Ocultar campos de comprovante';
    } else {
      fields.classList.add('hidden');
      chevron.classList.remove('rotate-90');
      text.textContent = 'Adicionar comprovante de esfor√ßo ativo (opcional)';
    }
  }

  // Toggle campos de esfor√ßo ativo
  function toggleEncaixeActiveEffortFields(show) {
    const fields = document.getElementById('encaixe-active-effort-fields');
    if (show) {
      fields.classList.remove('hidden');
    } else {
      fields.classList.add('hidden');
      // Limpar campos quando n√£o √© esfor√ßo ativo
      document.querySelectorAll('#encaixe-active-effort-fields input[type="checkbox"]').forEach(cb => cb.checked = false);
      document.getElementById('encaixe-other-action-field').classList.add('hidden');
    }
  }

  // Toggle campo "Outros"
  function toggleEncaixeOtherActionField() {
    const checkbox = document.getElementById('encaixe-action-other-checkbox');
    const field = document.getElementById('encaixe-other-action-field');
    
    if (checkbox.checked) {
      field.classList.remove('hidden');
    } else {
      field.classList.add('hidden');
    }
  }

  // Preview de screenshots
  function previewEncaixeScreenshots(input) {
    const preview = document.getElementById('encaixe-screenshots-preview');
    if (!preview) return;
    
    preview.innerHTML = '';
    
    if (input.files) {
      Array.from(input.files).forEach(file => {
        const reader = new FileReader();
        reader.onload = function(e) {
          const div = document.createElement('div');
          div.className = 'relative';
          div.innerHTML = `
            <img src="${e.target.result}" 
                 class="w-full h-20 object-cover rounded border border-gray-300"
                 alt="Preview">
            <span class="absolute top-0 right-0 bg-green-500 text-white text-xs px-1 rounded-bl">
              ‚úì
            </span>
          `;
          preview.appendChild(div);
        };
        reader.readAsDataURL(file);
      });
    }
  }
</script>

<style>
  .selected-action {
    @apply ring-2 ring-blue-500 ring-offset-2;
  }
  
  .phone-action-button {
    transition: all 0.2s ease-in-out;
  }
  
  .phone-action-button:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }
</style>

