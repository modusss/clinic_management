<div class="performance-report-container" style="margin: 15px">
  <!-- Header Section -->
  <div class="report-header">
    <div class="report-header-content">
      <div class="header-icon-wrapper">
        <i class="material-icons header-icon">assessment</i>
      </div>
      <div class="header-text">
        <h1 class="report-title">Relatório de Desempenho dos Marcadores</h1>
        <p class="report-subtitle">Análise detalhada de conversões e resultados por período</p>
      </div>
    </div>
  </div>

  <!-- Report Data -->
  <% @report_data.reverse_each do |month_data| %>
    <% if month_data[:referral_data].any? %>
      <!-- Month Section -->
      <div class="month-section">
        <!-- Month Header -->
        <div class="month-header">
          <div class="month-header-content">
            <i class="material-icons month-icon">calendar_month</i>
            <h2 class="month-title"><%= month_data[:period] %></h2>
          </div>
          <div class="month-stats">
            <span class="month-stat">
              <i class="material-icons">people</i>
              <%= month_data[:referral_data].count %> marcadores
            </span>
            <span class="month-stat">
              <i class="material-icons">event_available</i>
              <%= month_data[:referral_data].sum { |r| r[:days_worked] } %> dias trabalhados
            </span>
          </div>
        </div>

        <!-- Performance Cards -->
        <div class="performance-cards">
          <% sorted_data = month_data[:referral_data].sort_by { |r| -r[:conversions] } %>
          <% sorted_data.each_with_index do |referral_data, index| %>
            <div class="performance-card <%= 'top-performer' if index == 0 && referral_data[:conversions] > 0 %>">
              <!-- Card Header -->
              <div class="card-header">
                <div class="referral-name-section">
                  <i class="material-icons referral-icon">person</i>
                  <h3 class="referral-name"><%= referral_data[:referral] %></h3>
                  <% if index == 0 && referral_data[:conversions] > 0 %>
                    <span class="top-badge">
                      <i class="material-icons">star</i>
                      Top
                    </span>
                  <% end %>
                </div>
                <div class="conversion-badge <%= referral_data[:conversion_class] %>">
                  <%= number_to_percentage(referral_data[:conversion_rate], precision: 0) %>
                </div>
              </div>

              <!-- Card Metrics -->
              <div class="card-metrics">
                <div class="metric">
                  <div class="metric-icon-wrapper blue">
                    <i class="material-icons">event</i>
                  </div>
                  <div class="metric-content">
                    <span class="metric-label">Dias Trabalhados</span>
                    <span class="metric-value"><%= referral_data[:days_worked] %></span>
                  </div>
                </div>

                <div class="metric">
                  <div class="metric-icon-wrapper purple">
                    <i class="material-icons">group_add</i>
                  </div>
                  <div class="metric-content">
                    <span class="metric-label">Convidados</span>
                    <span class="metric-value"><%= referral_data[:invited] %></span>
                  </div>
                </div>

                <div class="metric">
                  <div class="metric-icon-wrapper green">
                    <i class="material-icons">check_circle</i>
                  </div>
                  <div class="metric-content">
                    <span class="metric-label">Conversões</span>
                    <span class="metric-value"><%= referral_data[:conversions] %></span>
                  </div>
                </div>

                <div class="metric">
                  <div class="metric-icon-wrapper orange">
                    <i class="material-icons">local_shipping</i>
                  </div>
                  <div class="metric-content">
                    <span class="metric-label">Pedidos Entregues</span>
                    <span class="metric-value"><%= referral_data[:delivered_orders] %></span>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <!-- Empty Month Section -->
      <div class="month-section empty-section">
        <div class="month-header empty">
          <div class="month-header-content">
            <i class="material-icons month-icon">calendar_month</i>
            <h2 class="month-title"><%= month_data[:period] %></h2>
          </div>
        </div>
        <div class="empty-state">
          <i class="material-icons empty-icon">info</i>
          <p class="empty-text">Sem dados para este período</p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

