.pagination li a:hover {
  background-color: #edf2f7; /* bg-gray-200 */
  color: #2d3748; /* text-gray-800 */
}

.pagination li.disabled a {
  color: #a0aec0; /* text-gray-400 */
  cursor: not-allowed;
}

/* If you are using SVG for the icons: */
.pagination li a svg {
  vertical-align: middle;
}
</style>

<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<style>
  .service-past {
    background-color: #FEF3F2 !important;  /* Light red */
  }
  .service-today {
    background-color: #ECFDF5 !important;  /* Light green */
  }
  .service-future {
    background-color: #EFF6FF !important;  /* Light blue */
  }
</style>

<style>
@media (max-width: 768px) {

  .pagination {
    flex-direction: column;
  }

  .pagination li {
    margin: 10px;
  }
}
</style>

<script>
  function showLoadingAndSubmit(selectElement) {
    const selectedValue = selectElement.value;
    const loadingNotification = document.getElementById('loading-notification');
    const loadingPeriod = document.getElementById('loading-period');
    
    // Submit the form first
    selectElement.form.submit();
    
    // Only show loading for weekly and monthly views after submission
    if (selectedValue === 'weekly' || selectedValue === 'monthly') {
      // Update loading text based on selection
      loadingPeriod.textContent = selectedValue === 'weekly' ? 'semana' : 'mês';
      
      // Show loading notification with a small delay to ensure form submission
      setTimeout(function() {
        loadingNotification.style.display = 'flex';
        // Notification will persist until page reloads - no auto-hide
      }, 100);
    }
  }
  
  function hideLoadingNotification() {
    const loadingNotification = document.getElementById('loading-notification');
    loadingNotification.style.display = 'none';
  }
</script>

<style>
  .loading-spinner {
    width: 20px;
    height: 20px;
    border: 2px solid #f3f4f6;
    border-top: 2px solid #3b82f6;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    flex-shrink: 0;
  }
  
  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }
  
  #loading-notification {
    max-width: 300px;
    animation: slideIn 0.3s ease-out;
  }
  
  @keyframes slideIn {
    from {
      transform: translateX(100%);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }
</style>

<% if @view_type != 'daily' && @chart_data.present? %>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const ctx = document.getElementById('servicesChart').getContext('2d');
    const chartData = <%= raw @chart_data.to_json %>;
    
    window.mainChart = new Chart(ctx, {
      type: 'bar',
      data: chartData,
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          title: {
            display: true,
            text: '<%= @view_type == "weekly" ? "Estatísticas Semanais" : "Estatísticas Mensais" %>',
            font: { size: 16, weight: 'bold' }
          },
          legend: { display: true, position: 'top' },
          tooltip: {
            mode: 'index',
            intersect: false,
            callbacks: {
              label: function(context) {
                return context.dataset.label + ': ' + context.parsed.y + ' pacientes';
              }
            }
          }
        },
        scales: {
          x: {
            display: true,
            title: { display: true, text: '<%= @view_type == "weekly" ? "Semanas" : "Meses" %>' }
          },
          y: {
            display: true,
            title: { display: true, text: 'Número de Pacientes' },
            beginAtZero: true
          }
        },
        interaction: { mode: 'nearest', axis: 'x', intersect: false }
      }
    });
  });

  function openChartModal() {
    const modal = document.getElementById('chartModal');
    modal.classList.remove('hidden');
    
    // Initialize chart in modal if not already done
    if (!window.modalChart) {
      const modalCtx = document.getElementById('modalServicesChart').getContext('2d');
      const chartData = <%= raw @chart_data.to_json %>;
      
      window.modalChart = new Chart(modalCtx, {
        type: 'bar',
        data: chartData,
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            title: {
              display: true,
              text: '<%= @view_type == "weekly" ? "Estatísticas Semanais" : "Estatísticas Mensais" %>',
              font: { size: 20, weight: 'bold' }
            },
            legend: { display: true, position: 'top', labels: { font: { size: 14 } } },
            tooltip: {
              mode: 'index',
              intersect: false,
              bodyFont: { size: 14 },
              titleFont: { size: 16 }
            }
          },
          scales: {
            x: {
              display: true,
              title: { display: true, text: '<%= @view_type == "weekly" ? "Semanas" : "Meses" %>', font: { size: 14 } }
            },
            y: {
              display: true,
              title: { display: true, text: 'Número de Pacientes', font: { size: 14 } },
              beginAtZero: true
            }
          }
        }
      });
    }
  }

  function closeChartModal() {
    const modal = document.getElementById('chartModal');
    modal.classList.add('hidden');
  }
  
  // Close modal on escape key
  document.addEventListener('keydown', function(event) {
    if (event.key === 'Escape') {
      closeChartModal();
    }
  });
</script>
<% end %>