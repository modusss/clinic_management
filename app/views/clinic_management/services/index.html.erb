<div class="container mt-6">
  <% if notice %>
    <div class="mb-4 p-2 bg-green-100 border border-green-500 text-green-700 rounded">
      <p><%= notice %></p>
    </div>
  <% end %>

  <section class="mb-8">
    <% unless clinical_assistant?(current_user) %>
    <header class="flex items-center justify-between mb-4">
      <h1 class="text-2xl font-bold">Atendimentos</h1>
      <%= link_to "Novo atendimento", new_service_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </header>
    <% end %>


    <% if is_manager_above? %>
    <!-- Filter Section -->
    <div class="mb-6 p-4 bg-gray-50 rounded-lg border">
      <div class="flex items-center space-x-4">
        <label for="view_type" class="text-sm font-medium text-gray-700">Visualização:</label>
        <%= form_with url: services_path, method: :get, local: true, class: "flex items-center space-x-2", id: "view-type-form" do |form| %>
          <%= form.select :view_type, 
                options_for_select([
                  ['Diária (padrão)', 'daily'],
                  ['Semanal', 'weekly'],
                  ['Mensal', 'monthly']
                ], @view_type), 
                {}, 
                { 
                  class: "px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                  onchange: "showLoadingAndSubmit(this);",
                  id: "view_type_select"
                } %>
        <% end %>
        <div class="text-sm text-gray-600">
          <% case @view_type %>
          <% when 'weekly' %>
            Dados agrupados por semana
          <% when 'monthly' %>
            Dados agrupados por mês
          <% else %>
            Dados detalhados por dia
          <% end %>
        </div>
      </div>
    </div>
    <% end %>

    <!-- Loading Notification -->
    <div id="loading-notification" class="fixed top-4 right-4 z-50 bg-white p-4 rounded-lg shadow-lg border-l-4 border-blue-500 flex items-center space-x-3" style="display: none;">
      <div class="loading-spinner"></div>
      <div>
        <h4 class="text-sm font-semibold text-gray-900">Processando dados...</h4>
        <p class="text-xs text-gray-600">Organizando informações por <span id="loading-period">período</span></p>
      </div>
      <button onclick="hideLoadingNotification()" class="text-gray-400 hover:text-gray-600 ml-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <div class="overflow-hidden border-gray-200 sm:rounded-lg">
      <%= data_table(@rows) %>
    </div>
    <br>
    
    <!-- Chart Section for Weekly/Monthly Views -->
    <% if @view_type != 'daily' && @chart_data.present? %>
      <div class="mt-8 p-6 bg-white rounded-lg shadow-lg border relative group">
        <div class="absolute top-4 right-4 opacity-0 group-hover:opacity-100 transition-opacity duration-200">
          <button onclick="openChartModal()" class="p-2 bg-gray-100 hover:bg-gray-200 rounded-full text-gray-600 hover:text-gray-800" title="Expandir gráfico">
            <span class="material-icons">open_in_full</span>
          </button>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-4">
          Gráfico de <%= @view_type == 'weekly' ? 'Dados Semanais' : 'Dados Mensais' %>
        </h3>
        <div class="relative" style="height: 400px;">
          <canvas id="servicesChart"></canvas>
        </div>
      </div>

      <!-- Chart Modal -->
      <div id="chartModal" class="fixed inset-0 z-50 hidden overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
          <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true" onclick="closeChartModal()"></div>
          <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
          <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-4 sm:align-middle sm:w-full" style="width: 95%; max-width: 95%;">
            <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
              <div class="flex justify-between items-center mb-4">
                <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">
                  Gráfico Expandido - <%= @view_type == 'weekly' ? 'Dados Semanais' : 'Dados Mensais' %>
                </h3>
                <button onclick="closeChartModal()" class="text-gray-400 hover:text-gray-500 focus:outline-none">
                  <span class="material-icons">close</span>
                </button>
              </div>
              <div class="relative" style="height: 80vh;">
                <canvas id="modalServicesChart"></canvas>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    
    <% if @view_type == 'daily' && @services.present? %>
      <%= paginate @services %>
    <% end %>
  </section>

  <% unless clinical_assistant?(current_user) %>
  <section>
    <header class="mb-4">
      <h1 class="text-2xl font-bold text-gray-900">Indicadores</h1>
      <p class="text-gray-600">Clique em um indicador para visualizar suas marcações.</p>
    </header>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
      <% @referrals.each do |referral| %>
        <div class="border border-gray-300 p-4 rounded-lg">
          <h2 class="text-xl font-medium text-gray-900"><%= referral.name %></h2>
          <%= link_to 'Visualizar marcações', index_by_referral_services_path(referral_id: referral.id), class: "mt-2 inline-block text-blue-500 hover:text-blue-700" %>
        </div>
      <% end %>
    </div>

    <% if @referrals.empty? %>
      <div class="text-center mt-8 py-4 border border-gray-300 rounded-lg">
        <p class="text-gray-600">Nenhum indicador encontrado. Vamos criar alguns!</p>
      </div>
    <% end %>
  </section>
  <% end %>
</div>


<style>
