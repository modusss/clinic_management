<div class="container mt-6">
  <% if notice %>
    <div class="mb-4 p-2 bg-green-100 border border-green-500 text-green-700 rounded">
      <p><%= notice %></p>
    </div>
  <% end %>

  <section class="mb-8">
    <% unless clinical_assistant?(current_user) %>
    <header class="flex items-center justify-between mb-4">
      <h1 class="text-2xl font-bold">Atendimentos</h1>
      <%= link_to "Novo atendimento", new_service_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </header>
    <% end %>


    <% if is_manager_above? %>
    <!-- Filter Section -->
    <div class="mb-6 p-4 bg-gray-50 rounded-lg border">
      <div class="flex items-center space-x-4">
        <label for="view_type" class="text-sm font-medium text-gray-700">Visualização:</label>
        <%= form_with url: services_path, method: :get, local: true, class: "flex items-center space-x-2" do |form| %>
          <%= form.select :view_type, 
                options_for_select([
                  ['Diária (padrão)', 'daily'],
                  ['Semanal', 'weekly'],
                  ['Mensal', 'monthly']
                ], @view_type), 
                {}, 
                { 
                  class: "px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                  onchange: "this.form.submit();"
                } %>
        <% end %>
        <div class="text-sm text-gray-600">
          <% case @view_type %>
          <% when 'weekly' %>
            Dados agrupados por semana
          <% when 'monthly' %>
            Dados agrupados por mês
          <% else %>
            Dados detalhados por dia
          <% end %>
        </div>
      </div>
    </div>
    <% end %>

    <div class="overflow-hidden border-gray-200 sm:rounded-lg">
      <%= data_table(@rows) %>
    </div>
    <br>
    
    <!-- Chart Section for Weekly/Monthly Views -->
    <% if @view_type != 'daily' && @chart_data.present? %>
      <div class="mt-8 p-6 bg-white rounded-lg shadow-lg border">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">
          Gráfico de <%= @view_type == 'weekly' ? 'Dados Semanais' : 'Dados Mensais' %>
        </h3>
        <div class="relative" style="height: 400px;">
          <canvas id="servicesChart"></canvas>
        </div>
      </div>
    <% end %>
    
    <% if @view_type == 'daily' && @services.present? %>
      <%= paginate @services %>
    <% end %>
  </section>

  <% unless clinical_assistant?(current_user) %>
  <section>
    <header class="mb-4">
      <h1 class="text-2xl font-bold text-gray-900">Indicadores</h1>
      <p class="text-gray-600">Clique em um indicador para visualizar suas marcações.</p>
    </header>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
      <% @referrals.each do |referral| %>
        <div class="border border-gray-300 p-4 rounded-lg">
          <h2 class="text-xl font-medium text-gray-900"><%= referral.name %></h2>
          <%= link_to 'Visualizar marcações', index_by_referral_services_path(referral_id: referral.id), class: "mt-2 inline-block text-blue-500 hover:text-blue-700" %>
        </div>
      <% end %>
    </div>

    <% if @referrals.empty? %>
      <div class="text-center mt-8 py-4 border border-gray-300 rounded-lg">
        <p class="text-gray-600">Nenhum indicador encontrado. Vamos criar alguns!</p>
      </div>
    <% end %>
  </section>
  <% end %>
</div>


<style>
.pagination {
  display: flex;
  justify-content: center;
  padding: 1em 0;
}

.pagination li {
  list-style: none;
}

.pagination li a {
  margin: 0 0.5em;
  padding: 0.5em 1em;
  border: 1px solid #e2e8f0; /* border-gray-300 */
  color: #4a5568; /* text-gray-700 */
}

.pagination li.active a,
.pagination li a:hover {
  background-color: #edf2f7; /* bg-gray-200 */
  color: #2d3748; /* text-gray-800 */
}

.pagination li.disabled a {
  color: #a0aec0; /* text-gray-400 */
  cursor: not-allowed;
}

/* If you are using SVG for the icons: */
.pagination li a svg {
  vertical-align: middle;
}
</style>

<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<style>
  .service-past {
    background-color: #FEF3F2 !important;  /* Light red */
  }
  .service-today {
    background-color: #ECFDF5 !important;  /* Light green */
  }
  .service-future {
    background-color: #EFF6FF !important;  /* Light blue */
  }
</style>

<style>
@media (max-width: 768px) {

  .pagination {
    flex-direction: column;
  }

  .pagination li {
    margin: 10px;
  }
}
</style>

<% if @view_type != 'daily' && @chart_data.present? %>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const ctx = document.getElementById('servicesChart').getContext('2d');
    
    const chartData = <%= raw @chart_data.to_json %>;
    
    new Chart(ctx, {
      type: 'bar',
      data: chartData,
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          title: {
            display: true,
            text: '<%= @view_type == "weekly" ? "Estatísticas Semanais" : "Estatísticas Mensais" %>',
            font: {
              size: 16,
              weight: 'bold'
            }
          },
          legend: {
            display: true,
            position: 'top'
          },
          tooltip: {
            mode: 'index',
            intersect: false,
            callbacks: {
              label: function(context) {
                return context.dataset.label + ': ' + context.parsed.y + ' pacientes';
              }
            }
          }
        },
        scales: {
          x: {
            display: true,
            title: {
              display: true,
              text: '<%= @view_type == "weekly" ? "Semanas" : "Meses" %>'
            }
          },
          y: {
            display: true,
            title: {
              display: true,
              text: 'Número de Pacientes'
            },
            beginAtZero: true
          }
        },
        interaction: {
          mode: 'nearest',
          axis: 'x',
          intersect: false
        }
      }
    });
  });
</script>
<% end %>