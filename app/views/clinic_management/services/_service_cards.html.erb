<%# Cards view for service appointments, using the same data as the table (rows) %>
<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
  <% rows.each do |row| %>
    <div class="bg-white rounded shadow p-4 mb-4">
      <% row.each do |cell| %>
        <div class="mb-2">
          <span class="block text-xs text-gray-500 font-semibold"><%= cell[:header] %></span>
          <span class="block text-base text-gray-800"><%= cell[:content] %></span>
        </div>
      <% end %>
    </div>
  <% end %>
</div> 