        <tbody>
          <td style="border: none">
              <div class="qr_code" style="text-align: center;">
                  <%= image_tag wicked_pdf_asset_base64("whatsapp_qrcode.png"), class: "qrcode", style: "width: 80px; height: 80px;" %>
                  <p style="transform: rotate(-90deg); margin: 0;">Whatsapp 1</p>
              </div>
          </td>
          <td style="border: none">
              <div class="qr_code" style="text-align: center;">
                  <%= image_tag wicked_pdf_asset_base64("whatsapp2_qrcode.png"), class: "qrcode", style: "width: 80px; height: 80px;" %>
                  <p style="transform: rotate(-90deg); margin: 0;">Whatsapp 2</p>
