<%= breadcrumb({title: "Minhas remarcações", path: nil}) %>

<%# Toggle for table/cards view. Stores preference in a cookie. %>
<%= render partial: "clinic_management/shared/toggle_cards_table", locals: { 
      path: ->(args = {}) { url_for(params.permit!.merge(args)) }, 
      cookie_name: "preferred_reschedules_view", 
      view_type: @view_type || 'table'
    } %>

<div class="container py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2 px-4">Minhas remarcações</h1>
    <p class="text-gray-600 px-4">Lista de pacientes que você remarcou.</p>
  </div>

  <div class="px-4">
    <p class="text-lg text-gray-700 mb-4">Número de remarcações: <%= @appointments.total_count %></p>
  </div>

  <%# Render table or cards view based on @view_type %>
  <% if @rows.present? %>
    <% if (@view_type || 'table') == 'cards' %>
      <%= render partial: "reschedule_cards", locals: { rows: @rows } %>
    <% else %>
      <div data-controller="table" class="overflow-hidden border-gray-200 sm:rounded-lg">
          <%= data_table(@rows) %>
          <br>
      </div>
    <% end %>
  <% else %>
    <div class="bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h2 class="text-xl font-medium text-gray-900">Nenhuma remarcação encontrada.</h2>
        <p class="mt-2 text-sm text-gray-600">Você ainda não fez nenhuma remarcação de pacientes.</p>
      </div>
    </div>
  <% end %>
  
  <% if @appointments.present? %>
    <div class="mt-6">
      <%= paginate @appointments %>
    </div>
  <% end %>
  
  <br>
  <br>
  <br>
  <br>
</div>

<style>
@media screen and (max-width: 767px) {
    .patient-name.nowrap{
        white-space: normal;
    }
    
    .comments {
        white-space: normal;
        max-width: 200px;
        word-wrap: break-word;
    }
}

.reschedule-comments {
    max-width: 300px;
}

.reschedule-comments textarea {
    min-height: 60px;
    font-size: 14px;
}

.reschedule-comments .mt-2 {
    font-size: 11px;
}

/* Estilo para links do WhatsApp */
.fa-whatsapp {
    color: #25D366;
}

/* Melhorar aparência dos links */
a.text-blue-500:hover {
    text-decoration: underline;
}
</style>
