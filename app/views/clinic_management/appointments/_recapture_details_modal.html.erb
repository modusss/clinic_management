<!-- Modal de Detalhes da Remarcação -->
<div id="recapture-details-modal-<%= appointment.id %>" 
     class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50"
     onclick="closeRecaptureDetailsModal(<%= appointment.id %>)">
  <div class="relative top-10 mx-auto p-5 border w-11/12 md:w-3/4 lg:w-2/3 max-w-4xl shadow-lg rounded-lg bg-white"
       onclick="event.stopPropagation()">
    
    <!-- Header -->
    <div class="flex justify-between items-center border-b pb-3 mb-4">
      <div>
        <h3 class="text-2xl font-bold text-gray-900">
          Detalhes da Remarcação
        </h3>
        <p class="text-sm text-gray-600 mt-1">
          <%= appointment.lead.name %>
        </p>
      </div>
      <button type="button" 
              onclick="closeRecaptureDetailsModal(<%= appointment.id %>)" 
              class="text-gray-400 hover:text-gray-600 transition-colors">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- Conteúdo do Modal (com turbo-frame para edição inline) -->
    <%= turbo_frame_tag "recapture-details-content-#{appointment.id}" do %>
      <%= render "clinic_management/appointments/recapture_details_view", appointment: appointment %>
    <% end %>

    <!-- Footer com botões -->
    <div class="mt-6 pt-4 border-t flex justify-between items-center gap-3">
      <!-- Lado Esquerdo: Botões de Ação -->
      <div class="flex items-center gap-2">
        <!-- Botão Editar (apenas se criado pelo usuário atual) -->
        <% if appointment.registered_by_user_id == current_user&.id %>
          <button type="button"
                  onclick="loadEditForm(<%= appointment.id %>)"
                  class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-medium transition-colors shadow-sm">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Editar
          </button>
        <% end %>
        
        <!-- Botão Converter para Orgânico -->
        <% if appointment.recapture_origin == 'active_effort' && appointment.registered_by_user_id == current_user&.id %>
          <%= button_to convert_to_organic_appointment_path(appointment), 
                      method: :patch,
                      form: { 
                        style: "display: inline;",
                        data: { 
                          turbo_confirm: "⚠️ Tem certeza que deseja converter para orgânico?\n\nIsso irá:\n• Remover todos os comprovantes anexados\n• Limpar as ações realizadas\n• Classificar como remarcação orgânica\n\n❌ Esta ação não pode ser desfeita." 
                        }
                      },
                      class: "inline-flex items-center px-4 py-2 bg-yellow-500 text-white rounded-lg hover:bg-yellow-600 font-medium transition-colors shadow-sm border-0 cursor-pointer" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path>
            </svg>
            Converter para Orgânico
          <% end %>
        <% elsif appointment.recapture_origin == 'organic' %>
          <div class="text-xs text-gray-500 italic flex items-center">
            <svg class="w-4 h-4 mr-1 text-green-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            Esta remarcação já é orgânica
          </div>
        <% else %>
          <!-- Espaço vazio para manter layout -->
          <div></div>
        <% end %>
      </div>
      
      <!-- Botão Fechar -->
      <button type="button"
              onclick="closeRecaptureDetailsModal(<%= appointment.id %>)"
              class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 font-medium transition-colors">
        Fechar
      </button>
    </div>

  </div>
</div>

<!-- Modal de screenshot em tela cheia -->
<div id="screenshot-fullscreen-modal-<%= appointment.id %>" 
     class="hidden fixed inset-0 bg-black bg-opacity-90 z-[60] flex items-center justify-center p-4"
     onclick="closeScreenshotFullscreen(<%= appointment.id %>)">
  <button onclick="closeScreenshotFullscreen(<%= appointment.id %>)" 
          class="absolute top-4 right-4 text-white bg-black bg-opacity-50 rounded-full p-2 hover:bg-opacity-75 transition-colors z-10">
    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
    </svg>
  </button>
  <img id="screenshot-fullscreen-img-<%= appointment.id %>" 
       src="" 
       class="max-w-full max-h-full rounded-lg shadow-2xl"
       onclick="event.stopPropagation()"
       alt="Screenshot ampliado">
  <div id="screenshot-fullscreen-caption-<%= appointment.id %>" 
       class="absolute bottom-8 left-1/2 transform -translate-x-1/2 text-white text-sm bg-black bg-opacity-50 px-4 py-2 rounded-full"></div>
</div>

<script>
  // Carregar formulário de edição
  function loadEditForm(appointmentId) {
    const url = `/clinic_management/appointments/${appointmentId}/edit_recapture_details`;
    
    fetch(url, {
      headers: {
        'Accept': 'text/vnd.turbo-stream.html',
        'X-Requested-With': 'XMLHttpRequest'
      }
    })
    .then(response => response.text())
    .then(html => {
      Turbo.renderStreamMessage(html);
    })
    .catch(error => {
      console.error('Erro ao carregar formulário:', error);
      alert('Erro ao carregar o formulário de edição. Tente novamente.');
    });
  }

  // Abrir modal de detalhes
  function openRecaptureDetailsModal(appointmentId) {
    const modal = document.getElementById('recapture-details-modal-' + appointmentId);
    if (modal) {
      modal.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    }
  }

  // Fechar modal de detalhes
  function closeRecaptureDetailsModal(appointmentId) {
    const modal = document.getElementById('recapture-details-modal-' + appointmentId);
    if (modal) {
      modal.classList.add('hidden');
      document.body.style.overflow = 'auto';
    }
  }

  // Abrir screenshot em tela cheia com URL direta
  function openScreenshotFullscreenDirect(imageUrl, index) {
    event.stopPropagation();
    
    const appointmentId = <%= appointment.id %>;
    
    const modal = document.getElementById('screenshot-fullscreen-modal-' + appointmentId);
    const img = document.getElementById('screenshot-fullscreen-img-' + appointmentId);
    const caption = document.getElementById('screenshot-fullscreen-caption-' + appointmentId);
    
    if (modal && img && caption) {
      img.src = imageUrl;
      caption.textContent = 'Comprovante ' + index;
      modal.classList.remove('hidden');
    }
  }
  
  // Abrir screenshot em tela cheia (capturando URL do elemento img)
  function openScreenshotFullscreenFromImg(containerElement, index) {
    event.stopPropagation();
    
    // Extrair appointment ID do contexto
    const appointmentId = <%= appointment.id %>;
    
    // Pegar URL da imagem do src do elemento img dentro do container
    const imgElement = containerElement.querySelector('img[data-screenshot]');
    if (!imgElement) return;
    
    const imageUrl = imgElement.src;
    
    const modal = document.getElementById('screenshot-fullscreen-modal-' + appointmentId);
    const img = document.getElementById('screenshot-fullscreen-img-' + appointmentId);
    const caption = document.getElementById('screenshot-fullscreen-caption-' + appointmentId);
    
    if (modal && img && caption) {
      img.src = imageUrl;
      caption.textContent = 'Comprovante ' + index;
      modal.classList.remove('hidden');
    }
  }
  
  // Função alternativa mantida para compatibilidade
  function openScreenshotFullscreen(imageUrl, index) {
    openScreenshotFullscreenDirect(imageUrl, index);
  }

  // Fechar screenshot em tela cheia
  function closeScreenshotFullscreen(appointmentId) {
    const modal = document.getElementById('screenshot-fullscreen-modal-' + appointmentId);
    if (modal) {
      modal.classList.add('hidden');
    }
  }

  // Fechar modais com tecla ESC
  document.addEventListener('keydown', function(event) {
    if (event.key === 'Escape') {
      // Fechar modal de screenshot fullscreen
      document.querySelectorAll('[id^="screenshot-fullscreen-modal-"]').forEach(modal => {
        if (!modal.classList.contains('hidden')) {
          modal.classList.add('hidden');
        }
      });
      
      // Fechar modal de detalhes
      document.querySelectorAll('[id^="recapture-details-modal-"]').forEach(modal => {
        if (!modal.classList.contains('hidden')) {
          modal.classList.add('hidden');
          document.body.style.overflow = 'auto';
        }
      });
    }
  });
</script>
