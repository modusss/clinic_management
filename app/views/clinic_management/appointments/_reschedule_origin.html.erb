<% if appointment.recapture_origin.present? %>
  <% if appointment.recapture_origin == 'organic' %>
    <div class="flex flex-col space-y-1">
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
        </svg>
        Orgânica
      </span>
      
      <!-- Link para converter para esforço ativo (apenas para o criador) -->
      <% if appointment.registered_by_user_id == current_user&.id %>
        <button type="button"
                onclick="openConvertModal(<%= appointment.id %>)"
                class="text-[10px] text-blue-600 hover:text-blue-800 underline cursor-pointer text-left">
          Converter para esforço ativo
        </button>
      <% end %>
    </div>
    
    <!-- Modal de conversão -->
    <%= render 'clinic_management/appointments/convert_to_active_effort_modal', appointment: appointment %>
    
  <% elsif appointment.recapture_origin == 'active_effort' %>
    <div class="flex flex-col space-y-1">
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"></path>
          <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd"></path>
        </svg>
        Esforço Ativo
      </span>
      
      <!-- Indicador de comprovantes -->
      <div class="flex items-center space-x-1">
        <% if appointment.recapture_screenshots.attached? %>
          <span class="inline-flex items-center text-xs text-green-600" title="<%= pluralize(appointment.recapture_screenshots.count, 'comprovante anexado', 'comprovantes anexados') %>">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"></path>
            </svg>
            <span class="ml-0.5"><%= appointment.recapture_screenshots.count %></span>
          </span>
        <% else %>
          <span class="inline-flex items-center text-xs text-red-600" title="Sem comprovantes">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M13.477 14.89A6 6 0 015.11 6.524l8.367 8.368zm1.414-1.414L6.524 5.11a6 6 0 018.367 8.367zM18 10a8 8 0 11-16 0 8 8 0 0116 0z" clip-rule="evenodd"></path>
            </svg>
          </span>
        <% end %>
        
        <!-- Botão Ver Detalhes -->
        <button type="button"
                onclick="openRecaptureDetailsModal(<%= appointment.id %>)"
                class="inline-flex items-center px-2 py-1 text-xs font-medium text-blue-700 bg-blue-50 rounded hover:bg-blue-100 transition-colors">
          <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
          </svg>
          Ver detalhes
        </button>
      </div>
    </div>
    
    <!-- Modal com detalhes da recaptura -->
    <%= render 'clinic_management/appointments/recapture_details_modal', appointment: appointment %>
  <% end %>
<% else %>
  <div class="flex flex-col space-y-1">
    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-600">
      <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
      </svg>
      Não definida
    </span>
    
    <% if appointment.registered_by_user_id == current_user&.id %>
      <div class="flex flex-col space-y-1 pl-1">
        <!-- Link para converter para orgânica -->
        <%= button_to convert_to_organic_appointment_path(appointment), 
                    method: :patch,
                    form: { 
                      style: "display: inline;",
                      data: { 
                        turbo_confirm: "Classificar como ORGÂNICA?\n\nIsso confirmará que a remarcação foi espontânea do paciente." 
                      }
                    },
                    class: "text-[10px] text-green-600 hover:text-green-800 underline cursor-pointer text-left bg-transparent border-0 p-0" do %>
          Classificar como Orgânica
        <% end %>
        
        <!-- Link para converter para esforço ativo -->
        <button type="button"
                onclick="openConvertModal(<%= appointment.id %>)"
                class="text-[10px] text-blue-600 hover:text-blue-800 underline cursor-pointer text-left">
          Classificar como Esforço Ativo
        </button>
      </div>
    <% end %>
  </div>
  
  <!-- Modal de conversão (necessário para o botão de esforço ativo funcionar) -->
  <%= render 'clinic_management/appointments/convert_to_active_effort_modal', appointment: appointment %>
<% end %>
