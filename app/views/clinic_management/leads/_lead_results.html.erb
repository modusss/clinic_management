<% if leads.present? %>
  <div class="top-full mt-2 w-80 bg-white rounded-lg shadow-lg p-4 z-10">
    <h3 class="text-gray-700 font-semibold text-lg mb-3 border-b pb-2">Resultados da Busca</h3>
    <ul class="space-y-3">
      <% leads.each do |lead| %>
        <li class="p-2 hover:bg-gray-50 rounded-md transition-colors">
          <%= link_to lead_path(lead), class: "block" do %>
            <div class="text-blue-600 font-medium"><%= lead.name %></div>
            <div class="text-gray-600 text-sm mt-1">
              <span class="inline-flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <%= add_phone_mask(lead.phone) %>
              </span>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
